# NextAuth.js 配置
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=<your-secret-key>
# 生成方式: openssl rand -base64 32

# 数据库配置
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<your-postgres-password>
POSTGRES_DB=deepmed
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:<your-postgres-password>@localhost:5432/deepmed
# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# Docker环境中使用
# REDIS_HOST=deepmed-redis

# OAuth 配置
#GOOGLE_CLIENT_ID=<your-google-client-id>
#GOOGLE_CLIENT_SECRET=<your-google-client-secret>
GITHUB_CLIENT_ID=<your-github-client-id>
GITHUB_CLIENT_SECRET=<your-github-client-secret>


# MinIO/S3 文件存储配置
MINIO_ENDPOINT=deepmed-minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=deepmed
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001
MINIO_MAX_CONNECTIONS=10
MINIO_MAX_RETRIES=3
MINIO_RETRY_DELAY=1000
MINIO_TIMEOUT=30000

# pgAdmin 配置
PGADMIN_DEFAULT_EMAIL=admin@deepmed.tech
PGADMIN_DEFAULT_PASSWORD=<your-pgadmin-password>

# 应用设置
NEXT_PUBLIC_APP_URL=http://localhost:3000


# --- LLM Search Library Defaults ---
# The model ID to use if not overridden elsewhere
#  deepseek v3 etc. 
# Default generation parameters used by getModelOptions
LLM_SEARCH_DEFAULT_MAX_TOKENS=8192
LLM_SEARCH_DEFAULT_TEMPERATURE=0.2

# Optional: Model-specific overrides for getModelOptions
# LLM_SEARCH_GPT4OMINI_MAX_TOKENS=8000
# Knowledge cutoff date used in prompts
LLM_SEARCH_KNOWLEDGE_CUTOFF="October 2023"


