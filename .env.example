MARKITDOWN_URL=http://localhost:5001

# MinerU Docker 配置（如果使用 mineru）
MINERU_URL=http://localhost:8000
MINERU_BACKEND=pipeline
MINERU_TIMEOUT=300000  # 可选，默认 5 分钟
