{
    "name": "document-processor-service",
    "version": "1.0.0",
    "description": "Document Processing Service - High Performance Document Conversion and Indexing",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "yarn run build && node dist/index.js",
        "dev": "nodemon --exec ts-node src/index.ts",
        "test": "jest",
        "docker:build": "docker build -t document-processor-service .",
        "docker:run": "docker run -p 5001:5001 document-processor-service",
        "docker:compose:up": "docker-compose up",
        "docker:compose:down": "docker-compose down",
        "docker:compose:build": "docker-compose build",
        "docker:compose:logs": "docker-compose logs -f"
    },
    "dependencies": {
        "@koa/multer": "^3.1.0",
        "@types/multer": "^1.4.12",
        "bullmq": "^4.12.0",
        "dotenv": "^16.3.1",
        "fs-extra": "^11.1.1",
        "koa": "^2.14.2",
        "koa-bodyparser": "^4.4.1",
        "koa-router": "^12.0.1",
        "mammoth": "^1.6.0",
        "multer": "^1.4.5-lts.2",
        "pdf-parse": "^1.1.1",
        "redis": "^4.6.10",
        "uuid": "^9.0.0",
        "winston": "^3.10.0"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.130",
        "@types/fs-extra": "^11.0.1",
        "@types/koa": "^2.13.8",
        "@types/koa-bodyparser": "^4.3.12",
        "@types/koa-router": "^7.4.5",
        "@types/koa__multer": "^2.0.7",
        "@types/node": "^20.5.7",
        "@types/pdf-parse": "^1.1.5",
        "@types/uuid": "^9.0.8",
        "jest": "^29.6.2",
        "nodemon": "^3.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "license": "MIT"
}